# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
SQLALCHEMY_DATABASE_URL=postgresql+psycopg2://postgres:admin@localhost:5432/FastApi_Agentice_RAG_with_ClaudAi

# ===================================================================
# AUTHENTICATION & SECURITY
# ===================================================================
SECRET_KEY=this-is-a-very-secure-32-char-secret-key-1234
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================================================================
# LLM CONFIGURATION (GROQ)
# ===================================================================
GROQ_API_KEY=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
LLM_MODEL=llama-3.1-70b-versatile
TEMPERATURE=0.7
MAX_TOKENS=2000

# Optional: OpenAI (if you want to switch providers)
# OPENAI_API_KEY=sk-your-openai-key-here

# ===================================================================
# EMBEDDING CONFIGURATION
# ===================================================================
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ===================================================================
# VECTOR STORE CONFIGURATION
# ===================================================================
VECTOR_STORE_TYPE=chroma
CHROMA_PERSIST_DIR=./data/vectors
COLLECTION_NAME=advanced_rag
TOP_K_RESULTS=5

# ===================================================================
# KNOWLEDGE GRAPH RAG
# ===================================================================
ENABLE_GRAPH_RAG=true
GRAPH_STORE_PATH=./data/graphs/knowledge_graph.pkl
MAX_GRAPH_NODES=1000
ENTITY_EXTRACTION_THRESHOLD=0.7

# ===================================================================
# AGENT CONFIGURATION
# ===================================================================
ENABLE_MULTI_AGENT=true
MAX_AGENT_ITERATIONS=5
MAX_REACT_STEPS=5
AGENT_TIMEOUT=60

# ===================================================================
# REACT AGENT CONFIGURATION
# ===================================================================
ENABLE_REACT_LOGGING=true

# ===================================================================
# TEXT PROCESSING
# ===================================================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_DOCUMENT_SIZE=10000000

# ===================================================================
# MEMORY CONFIGURATION
# ===================================================================
MEMORY_TYPE=buffer
MAX_MEMORY_MESSAGES=10

# ===================================================================
# LOGGING
# ===================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
AGENT_LOG_FILE=./logs/agents.log

# ===================================================================
# FILE UPLOAD
# ===================================================================
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=[".pdf", ".txt", ".docx", ".md"]

# ===================================================================
# API SETTINGS
# ===================================================================
API_TITLE=Advanced Agentic RAG System
API_VERSION=2.0.0
API_DESCRIPTION=Multi-Agent RAG with ReAct, Graph RAG, and Adaptive Strategies

# ===================================================================
# PERFORMANCE & CACHING
# ===================================================================
ENABLE_CACHING=true
CACHE_TTL=3600

# ===================================================================
# CORS CONFIGURATION
# ===================================================================
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# ===================================================================
# REDIS CONFIGURATION (Optional - for caching/background tasks)
# ===================================================================
# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===================================================================
# SERVER CONFIGURATION
# ===================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=true

# ===================================================================
# DEVELOPMENT/PRODUCTION MODE
# ===================================================================
ENVIRONMENT=development
DEBUG=true